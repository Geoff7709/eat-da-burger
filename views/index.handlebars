<header class="text-center">
  <h1>Eat Da Burger!!</h1>
</header>
{{!-- <div class="text-center">
  <img src="/image/burger.png" class="img-fluid" alt="burger">
</div> --}}
<div class="container hero align-items-center">
  <div class="row">
    <div class="col-md-4 align-self-center">
      <div class="card border border-4 border-dark rounded shadow" style="width: 18rem;">
        <img src="/image/eatMe.png" class="card-img-top" alt="burger">
        <div class="card-body">
          <h3 class="card-title">New Burgers</h3>
          </p>
        </div>
        <ol class="list-group list-group-flush">
          {{#each burgers}}
          {{#unless devoured}}
          <li class="list-group-item">
            <span>{{burger_name}}</span>
            <button class="devour btn btn-warning rounded-pill" data-id="{{id}}">DEVOUR</button>
          </li>
          {{/unless}}
          {{/each}}
        </ol>
      </div>
    </div>
    <div class="col-md-4 align-self-center">
      <form class="stretchColumn">
        <textarea name="burger_name" class="rounded border border-2 border-dark"></textarea>
        <button class="btn btn-success rounded-pill" type="submit">Add A Burger</button>
      </form>
    </div>
    <div class="col-md-4 align-self-center">
      <div class="card border border-4 border-dark rounded shadow" style="width: 18rem;">
        <img src="/image/eatenBurger.jpg" class="card-img-top" alt="burger">
        <div class="card-body">
          <h3 class="card-title">Devoured Burgers</h3>
          </p>
        </div>
        <ol class="list-group list-group-flush">
          {{#each burgers}}
          {{#if devoured}}
          <li class="list-group-item">
            <span>{{burger_name}}</span>
            {{!-- <button class="delete btn btn-danger rounded-pill" data-id="{{id}}">DELETE</button> --}}
          </li>
          {{/if}}
          {{/each}}
        </ol>
      </div>
    </div>
  </div>
</div>